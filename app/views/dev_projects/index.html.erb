<div class="container mt-5">
  <% content_for :title, "My Development Projects" %>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Development Projects</h2>
    <%= link_to "Create New", new_dev_project_path, class: "btn btn-success" %>
  </div>


  <% @dev_projects.each do |dev_project| %>
      <div class="card mb-4">
        <div class="row g-0">
          <% if dev_project.project_photos.attached? %>
            <div class="col-md-4">
              <%= image_tag dev_project.project_photos.first, class: "img-fluid rounded-start", resize_to_fit: [400, 300] %>
             </div>
          <% else %>
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                <span class="text-muted">No photo available</span>
            </div>
          <% end %>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= dev_project.title %></h5>
              <p class="card-text mb-1">
                <i class="bi bi-geo-alt-fill"></i> <%= dev_project.address %>, <%= dev_project.barangay %>, Naga City
              </p>
              <span class="badge bg-secondary mb-3"><%= dev_project.property_type %></span>
              <br>
              <div class="d-flex">
                <%= link_to "Show this project", dev_project, class: "btn btn-outline-primary btn-sm" %>
                <%= button_to "Delete", dev_project_path(dev_project), method: :delete, class: "btn btn-danger btn-sm ml-1", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <%= paginate @dev_projects, class: "pagination" %>
</div>