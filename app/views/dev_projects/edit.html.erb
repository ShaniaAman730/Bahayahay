<% content_for :title, "Editing Development Project" %>

<div class="container mt-5">

  <h1>Edit Development Project</h1>

  <%= render "form", dev_project: @dev_project %>

  <br>
  <br>
  <br>

  <h3>Your Attachments</h3>

  <% if @dev_project.project_photos.attached? %>
    <div class="mb-3">
      <p>Previously uploaded photos:</p>
      <div class="row">
        <% @dev_project.project_photos.each do |photo| %>
          <div class="col-md-3">
            <%= image_tag photo, class: "img-thumbnail media", style: "width: 300px;" %>

            <%= form_with url: remove_attachment_dev_project_path(@dev_project, attachment_id: photo.id), method: :delete, local: true do %>
              <%= submit_tag "Remove", class: "btn btn-danger btn-sm mt-2", data: { confirm: "Are you sure you want to delete this photo?" } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
