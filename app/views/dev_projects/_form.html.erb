<%= form_with(model: @dev_project, local: true, html: { multipart: true }) do |form| %>
  <% if @dev_project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@dev_project.errors.count, "error") %> prohibited this dev_project from being saved:</h2>
      <ul>
        <% @dev_project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- START OF FORM --> 

  <div class="field p-2">
    <%= form.label :title %><br />
    <%= form.text_field :title, required: true, autofocus: true, autocomplete: "title", class: "form-control w-100", placeholder: "Title" %>
  </div>

  <div class="form-row p-2">
    <div class="col col-md-6 mb-3">
      <%= form.label :property_type, "Project type", class: "form-label"  %><br>
      <%= form.select :property_type, options_for_select(DevProject.property_types.keys.map { |k| [k.humanize, k] }, selected: form.object.property_type || "corroborated" ), {},class: "form-select" %>
    </div> 
    <div class="col col-md-6 mb-3"> 

    </div> 
  </div> 

  <div class="field p-2">
    <%= form.label :project_photos, "Upload photos" %><br>
    <%= form.file_field :project_photos, multiple: true, class: "form-control w-100", id: "photos_input", accept: "image/*", data: { max_size: 2.megabytes } %>
  </div>

  <div class="field p-2">
    <%= form.label :description %><br />
    <%= form.rich_text_area :description, id: "dev_project_description", class: "post-textarea trix-limit", data: { max_length: 1500 } %>
      <small class="char-counter text-muted">0/1500 characters</small>
  </div>

  <div class="form-row p-2">
    <div class="col col-md-8 mb-3">
      <%= form.label :address, "Address line"  %><br>
      <%= form.text_field :address, required: true, class: "form-control w-100" %>
    </div>
    <div class="col col-md-4 mb-3">
      <%= form.label :barangay, "Barangay", class: "form-label" %>
      <%= form.select :barangay, options_for_select(DevProject.barangays.keys.map { |k| [k.humanize, k] }, selected: form.object.barangay || "corroborated" ), {},class: "form-select" %>
    </div>
  </div>

    <!-- Map Goes Here -->
    <%= form.hidden_field :latitude, id: "listing_latitude" %>
    <%= form.hidden_field :longitude, id: "listing_longitude" %>

    <div class="p-2">
      <p>Add a marker to the property's location</p>
      <div id="map" style="height:500px;"></div>
    </div>

  <div class="container bg-light mt-5 p-5"> 
    <h5>Amenities</h5>
    <p><small><em>Check which applies.</em></small></p>
    <div class="row">
      <% Amenity.project.each_slice((Amenity.project.count / 2.0).ceil) do |group| %>
        <div class="col">
          <% group.each do |amenity| %>
            <div class="form-check d-flex">
              <%= check_box_tag "dev_project[amenity_ids][]", amenity.id,
                  @dev_project.amenity_ids.include?(amenity.id),
                  id: "dev_project_amenity_#{amenity.id}",
                  class: "form-check-input" %>

              <%= label_tag "dev_project_amenity_#{amenity.id}", amenity.label, class: "form-check-label ms-2" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>  

  <div>
    <%= form.submit "Post Development Project", class: "btn btn-secondary float-right mt-3 mb-5" %>
  </div>
 <% end %>