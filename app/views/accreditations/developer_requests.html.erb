<div class="index container mt-5">

<div class="bg-light rounded p-4 mb-4">
  <h4 class="fw-bold mb-4">Accreditation Requests</h4>
  <% if @pending_accreditations.any? %>
    <ul class="list-group mb-4">
      <% @pending_accreditations.each do |acc| %>
        <li class="list-group-item d-flex justify-content-between align-items-center p-4">
          <span>
            Realty <%= link_to acc.realty.name, realty_path(acc.realty), class: "fw-bold text-decoration-none" %>
            has requested a partnership.
          </span>
          <div class="d-flex">
            <%= button_to "Approve", accreditation_path(acc, status: :approved),
                  method: :patch, class: "btn btn-success btn-sm me-2" %>

            <%= button_to "Reject", accreditation_path(acc, status: :rejected),
                  method: :patch, class: "btn btn-danger btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No pending requests.</p>
  <% end %>
</div>

<h4 class="fw-bold mb-4">Active Partnerships</h4>

<% if @approved_accreditations.any? %>
  <div class="row">
    <% @approved_accreditations.each do |acc| %>
     <div class="col-md-6 mb-3">
      <div class="d-flex align-items-center p-3 border rounded">
        <% if acc.realty.logo.attached? %>
            <%= image_tag acc.realty.logo, class: "rounded-circle me-3", size: "70x70" %>
        <% else %>
            <%= image_tag "no-profile.jpg", class: "rounded-circle me-3", size: "70x70" %>
        <% end %>
      <div>
        <p class="fw-bold text-decoration-none"><%= acc.realty.name %></p>
        <div class="d-flex mt-2">
           <%= link_to "View realty", realty_path(acc.realty),
              class: "btn btn-outline-primary btn-sm mr-2" %>

          <%= button_to "Remove Partnership", accreditation_path(acc),
              method: :delete, class: "btn btn-outline-danger btn-sm",
              data: { confirm: "Are you sure you want to remove this partnership?" } %>
           </div>
         </div>
       </div>
     </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= paginate @approved_accreditations %>
  </div>
  
<% else %>
  <p>No active partnerships yet.</p>
<% end %>
</div>