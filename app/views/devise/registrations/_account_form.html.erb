<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }, local: true) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <% if !current_user.developer? && !current_user.rebap? %>
      <div class="form-row p-2">
        <div class="col-12 col-md-6 mb-3">
          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class: "form-control w-100", placeholder: "First Name" %>
          </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: "form-control w-100", placeholder: "Last Name" %>
          </div>
        </div>
      </div>
     <% end %> 

    <% if current_user.realtor? %>
      <div class="form-row p-2">
        <div class="col-12 col-md-6 mb-3">
          <div class="field">
            <%= f.label :prc_no, "PRC ID or Accreditation No." %><br />
            <%= f.text_field :prc_no, class: "form-control w-100", placeholder: "PRC ID or Accreditation No." %>
          </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
          <div class="field">
            <%= f.label :dhsud_no, "DHSUD Certificate No." %><br />
            <%= f.text_field :dhsud_no, class: "form-control w-100", placeholder: "DHSUD Certificate No." %>
          </div>
        </div>
      </div>
    <% elsif current_user.developer? %>
      <div class="form-row p-2">
      <div class="col-12 col-md-12 mb-3">
        <div class="field">
          <%= f.label :company_name, "Company Name" %><br />
          <%= f.text_field :company_name, class: "form-control w-100", placeholder: "Company Name" %>
        </div>
      </div>
    </div>
  <% elsif current_user.rebap? %>
    <div class="form-row p-2">
      <div class="col-12 col-md-12 mb-3">
          <p>Chapter Name</p>
          <% if current_user.rebap_memberships.present? %>
            <p><strong><%= current_user.rebap_memberships.first&.chapter || "No Chapter Assigned" %></strong></p>
            <%= link_to "Edit Chapter Name", edit_rebap_path(current_user), class: "btn btn-outline-primary btn-sm" %>
          <% else %>
            <p><strong>No Chapter Assigned</strong></p>
          <% end  %> 
      </div>
    </div>

  <% end %>

  <div class="form-row p-2">
    <div class="col-12 col-md-12 mb-3">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
  </div>

  <div class="form-row p-2">
    <div class="col-12 col-md-6 mb-3">
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-100" %>
        <% if @minimum_password_length %>
          <small><em><%= @minimum_password_length %> characters minimum</em></small>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-md-6 mb-3">
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-100" %>
      </div>
    </div>
  </div>


  <hr class="hr p-2 mt-2" />

  <div class="field mb-2">
    <strong><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></strong><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-100", required: true %>
  </div>

    <%= f.submit "Update Account", class: "btn btn-warning mt-3" %>
  <% end %>
</div>