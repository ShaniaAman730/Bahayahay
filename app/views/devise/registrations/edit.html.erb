<div class="container mt-5">
  <div class="form-container">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= render partial: "profile_picture" %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }, local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field p-2">
      <%= f.label :profile_photo %><br>
      <%= f.file_field :profile_photo, class: "form-control w-50" %>
    </div>

    <% if current_user.realtor? || current_user.developer? %>
      <div class="field p-2">
        <%= f.label :about, "About" %><br />
        <%= f.text_area :about, data: { placeholder: "Tell us about yourself..." }, class: "form-control w-100 post-a", rows: "7" %>
      </div>
    <% end %>

    <div class="form-row p-2">
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control w-100",  placeholder: "First name" %>
        </div>
      </div>
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control w-100", placeholder: "Last name" %>
        </div>
      </div>
    </div>

    <div class="form-row p-2">
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>

      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :contact_no %><br />
          <%= f.text_field :contact_no, class: "form-control w-100", placeholder: "Contact no." %>
        </div>
      </div>
    </div>

    <% if current_user.realtor? %>
    <div class="form-row p-2">
      <div class="col col-md-6 mb-3">
          <div class="field">
            <%= f.label :prc_no, "PRC ID or Accreditation number" %><br />
            <%= f.text_field :prc_no, class: "form-control w-100", placeholder: "PRC ID or Accreditation number" %>
          </div>
      </div>    
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :dhsud_no, "DHSUD Certificate number" %><br />
          <%= f.text_field :dhsud_no, class: "form-control w-100", placeholder: "DHSUD Certificate number" %>
        </div>
      </div>
    </div> 

    <% elsif current_user.realtor? || current_user.developer? %>
    <div class="form-row p-2">
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :company_name, "Realty/Company" %><br />
          <%= f.text_field :company_name, class: "form-control w-100",  placeholder: "Realty/Company" %>
        </div>
      </div>
      <div class="col col-md-6 mb-3">
        <div class="field">
          <%= f.label :website, "Realty/Company website" %><br />
          <%= f.text_field :website, class: "form-control w-100",  placeholder: "Realty/Company website" %>
       </div>
      </div>
    </div>

  <% end %>

  <div class="field p-2">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-50" %>
    <% if @minimum_password_length %>
      <small><em><%= @minimum_password_length %> characters minimum</em></small>
    <% end %>
  </div>

  <div class="field p-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-50" %>
  </div>

  <hr class="hr p-2 mt-5" />
    <div class="field mb-2">
      <strong><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></strong><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-50" %>
    </div>

  <br>
  <div class="actions mt-3 mb-5">
    <%= f.submit "Update", class: "btn btn-secondary float-right" %>
  </div>
<% end %>

<br>

<div class="container bg-light rounded p-4 mt-5 mb-3">
  <h3>Cancel my account</h3>
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-1" %></div>
   <%= link_to "Back", :back, class: "btn btn-link" %>
</div>

</div>

</div>
</div>
<div class="mb-5"></div>
<div class="mb-5"></div>