<div class="container mt-5">
  <h2 class="mb-4">Edit My REBAP Chapter</h2>

  <div class="card p-4 shadow-sm">
    <p><strong>Email:</strong> <%= current_user.email %></p>

    <%= form_with model: @rebap_membership, url: rebap_path(current_user), method: :patch, local: true, data: { turbo: false } do |f| %>
      <div class="mb-3">
        <%= f.label :chapter, "Chapter Name", class: "form-label" %>
        <%= f.text_field :chapter, class: "form-control", required: true, placeholder: "Enter Chapter Name" %>
      </div>

      <div class="d-flex justify-content-end">
        <%= f.submit "Update Chapter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

