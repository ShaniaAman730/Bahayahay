<% is_sent = defined?(local_user) && local_user && message.sender == local_user %>

<div class="<%= is_sent ? 'sent' : 'received' %>">
  <p class="mb-1"><strong><%= message.sender.first_name %></strong></p>
  <p class="mb-1"><%= message.body %></p>
  <small><em><%= message.created_at.strftime("%I:%M %p") %></em></small>
</div>
<br>
