<div class="container mt-5">
  <h2 class="mb-4">Create REBAP Chapter</h2>

  <div class="card p-4 shadow-sm">
    <p><strong>REBAP User:</strong> <%= @rebap_user.email %></p>

    <%= form_with url: admin_rebap_memberships_path, method: :post, local: true do %>
      <%= hidden_field_tag :rebap_id, @rebap_user.id %>

      <div class="mb-3">
        <%= label_tag :chapter, "Chapter Name", class: "form-label" %>
        <%= text_field_tag :chapter, nil, placeholder: "Enter Chapter Name", class: "form-control", required: true %>
      </div>

      <div class="d-flex justify-content-end">
        <%= submit_tag "Create REBAP Chapter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
