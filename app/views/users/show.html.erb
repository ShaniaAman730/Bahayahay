<div class="container-fluid mt-5">
  <div class="index-container container">
    <div class="row">

      <!-- LEFT SECTION -->
      <div class="col-12 col-md-8">
        <!-- Profile Header -->
        <div class="row g-4 align-items-center">
          <div class="col-auto">
            <% if @user.persisted? && @user.profile_photo.attached? %>
              <%= image_tag @user.profile_photo, class: "rounded-circle profile-photo" %>
            <% else %>
              <%= image_tag("no-profile.jpg", class: "rounded-circle img-thumbnail profile-photo") %>
            <% end %>
          </div>
          <div class="col">
            <% if @user.realtor? %>
              <h2 class="fw-bold mb-1"><%= @user.first_name %> <%= @user.last_name %></h2>

             <div class="mb-2"> 
              <p class="text-muted mb-2">
                <% if @user.is_broker?  %>
                  <em>Real Estate Broker</em>
                <% else %>
                  <em>Real Estate Salesperson</em>
                <% end %>
              <br>  
              <%= @user.company_name %>
              </p>
            </div>
            <% elsif @user.developer? %>
              <h2 class="fw-bold mb-1"><%= @user.company_name %></h2>
            <% elsif @user.client? %>
              <h2 class="fw-bold mb-1"><%= @user.first_name %> <%= @user.last_name %></h2>
            <% elsif @user.rebap? %>
                <h2 class="fw-bold mb-1 text-danger">REBAP <br>
                <% if @user.rebap_memberships.present? %>
                  <%= @user.rebap_memberships.first&.chapter %>
                <% end %>
              </h2>
            <% end %>

            <% if user_signed_in? && current_user.id == @user.id %>
              <% if !current_user.client? %>
                <!-- Statistics -->
                <p class="text-muted small mb-2">
                  <i class="bi bi-eye"></i> <%= pluralize(@user.total_views, "Profile view") %> 
                  <i class="bi bi-person ml-1"></i> <%= pluralize(@user.unique_visitors, "Unique visitor") %> 
                </p>
              <% end %>
              <!-- Edit Profile -->
              <%= link_to "Edit Profile", edit_registration_path(current_user), class: "btn btn-outline-secondary btn-sm" %>
            <% end %>
          </div>
        </div>

        <!-- About Section -->
        <% if @user.realtor? || @user.developer? || @user.realtor? || @user.about.present? %>
        <div class="mt-4 p-4 border rounded">
          <% if @user.realtor? %>
            <h4>About <%= @user.first_name %></h4>
          <% elsif @user.developer? %>
            <h4>About <%= @user.company_name %></h4>
          <% elsif @user.rebap? %>
            <h4>About</h4>
          <% end %>
          <p class="mb-0"><%= @user.about %></p>
        </div>
        <% end %>

        <% if @user.rebap? %>
        <!-- Officers Section -->
        <div class="mt-4 p-4">
          <h4>Officers</h4>
          <% if @officers.any? %>
            <div class="row mt-3">
              <% @officers.each do |membership| %>
                <div class="col-md-6 mb-3">
                  <div class="card border border-secondary my-card h-100">
                    <div class="card-body d-flex align-items-center">
                      <% member = membership.member %>
                      <% if member.profile_photo.attached? %>
                        <%= image_tag member.profile_photo, class: "rounded-circle me-3", size: "60x60" %>
                      <% else %>
                        <%= image_tag "no-profile.jpg", class: "rounded-circle me-3", size: "60x60" %>
                      <% end %>

                      <div class="flex-grow-1">
                        <h5 class="card-title mb-1"><%= member.full_name %></h5>
                        <p class="mb-1 text-muted"><%= membership.role %> (<%= membership.year %>)</p>
                        <%= link_to "View Profile", user_path(member), class: "btn btn-outline-secondary btn-sm" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

          <div class="mt-3">
            <%= paginate @officers, param_name: :officers_page %>
          </div>
        <% else %>
          <p>No officers listed yet.</p>
        <% end %>
      </div>  

    <!-- Guides Section -->
      <section class="pt-4 pb-4">
        <div class="container">
          <div class="row align-items-center mb-3">
            <!-- Title -->
            <div class="col-12 col-md-6 text-center text-md-start">
              <h4>
                REBAP
                  <% if @user.rebap_memberships.present? %>
                    <%= @user.rebap_memberships.first&.chapter %>'s
                  <% end %>
                Guides
               </h4>       
            </div>

            <!-- Arrows -->
            <div class="col-12 col-md-6 text-center text-md-end">
              <a class="btn btn-outline-danger me-2 mb-2" href="#carouselRebapGuides" role="button" data-bs-slide="prev">
                <i class="bi bi-chevron-left"></i>
              </a>
              <a class="btn btn-outline-danger mb-2" href="#carouselRebapGuides" role="button" data-bs-slide="next">
                <i class="bi bi-chevron-right"></i>
              </a>
            </div>
          </div>

          <!-- Carousel -->
          <div class="row">
            <div class="col-12">
              <div id="carouselRebapGuides" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% if @recent_guides.present? %>
                    <% @recent_guides.each_slice(4).with_index do |group, index| %>
                      <div class="carousel-item <%= 'active' if index == 0 %>">
                        <div class="row">
                          <% group.each do |guide| %>
                            <div class="col-12 col-sm-6 col-md-3 mb-3">
                              <%= link_to guide_path(guide), class: "text-decoration-none text-dark" do %>
                                <div class="card h-100 border border-light shadow-sm transition-all">
                                  <% if guide.guide_photo.attached? %>
                                    <%= image_tag url_for(guide.guide_photo), class: "card-img-top", style: "object-fit: cover; height: 180px;" %>
                                  <% else %>
                                    <div class="d-flex align-items-center justify-content-center bg-light" style="height: 180px;">
                                      <span class="text-muted small">No photo</span>
                                    </div>
                                  <% end %>

                                  <div class="card-body p-2">
                                    <h6 class="card-title text-danger mb-1"><%= truncate(guide.title, length: 45) %></h6>
                                    <p class="card-text text-muted small mb-0"><%= truncate(guide.body.to_plain_text, length: 80) %></p>
                                  </div>
                                </div>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% else %>
                    <p class="text-muted text-center">No guides posted yet.</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <style>
        .card.transition-all {
          transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .card.transition-all:hover {
          transform: translateY(-3px);
          box-shadow: 0 4px 12px rgba(255, 0, 0, 0.15); 
          background-color: #ffeded; 
          border-color: #ffb3b3; 
        }


        .card-title {
          font-size: 0.95rem;
        }

        .card-text {
          font-size: 0.85rem;
          line-height: 1.3;
        }

        .my-card:hover {
          background-color: #ffeded; 
        }

        @media (max-width: 767px) {
          .card-title { font-size: 0.9rem; }
          .card-text { font-size: 0.8rem; }
        }

      </style>

      <!-- Active Members Section -->
      <div class="mt-4 p-4 border border-secondary rounded">
        <h4>Active Members</h4>
        <% if @active_members.any? %>
          <div class="row mt-3">
            <% @active_members.each do |membership| %>
              <% member = membership.member %>
              <div class="col-md-6 mb-3">
                <div class="card my-card h-100">
                  <div class="card-body d-flex align-items-center">
                    <% if member.profile_photo.attached? %>
                      <%= image_tag member.profile_photo, class: "rounded-circle me-3", size: "60x60" %>
                    <% else %>
                      <%= image_tag "no-profile.jpg", class: "rounded-circle me-3", size: "60x60" %>
                    <% end %>

                    <div class="flex-grow-1">
                      <h5 class="card-title mb-1"><%= member.full_name %></h5>
                      <%= link_to "View Profile", user_path(member), class: "btn btn-outline-secondary btn-sm" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-3">
            <%= paginate @active_members, param_name: :members_page %>
          </div>
        <% else %>
          <p>No active members yet.</p>
        <% end %>
      </div>
          
    <% end %>

        <!-- Realtor IDs -->
        <div class="ml-3">
        <% if @user.realtor? %>
          <div class="row bg-light mt-3 p-3 rounded" style="max-width: 100%;">
            <div class="col">
              <strong>PRC:</strong> <%= @user.prc_no %>
            </div>
            <div class="col">
              <strong>DHSUD:</strong> <%= @user.dhsud_no %>
            </div>
          </div>
          <div class="d-flex mt-2">
            <i class="bi bi-info-circle me-2"></i>
            <p class="mb-0 small text-muted">These ID numbers verify legitimacy of real estate professionals as mandated by PRC and DHSUD.</p>
          </div>
        <% end %>
        </div>

        
        <% if @user.approved_realty.present? %>
        <%= link_to realty_path(@user.approved_realty), class: "text-decoration-none text-dark" do %>
          <div class="card my-4">
            <div class="card-body d-flex align-items-center">
              <% if @user.approved_realty.logo.attached? %>
                <%= image_tag @user.approved_realty.logo, class: "rounded-circle me-4", size: "80x80" %>
              <% else %>
                <%= image_tag("no-profile.jpg", class: "rounded-circle me-4", size: "80x80") %>
              <% end %>
              <div>
                <p class="card-title small mb-1">
                  <em><%= @user.first_name %> is a part of the realty:</em>
                </p>
                <h5 class="card-text mb-2">
                  <%= @user.approved_realty.name %>
                </h5>
              </div>
            </div>
          </div>
        <% end %>




    <% elsif @user.managed_realty.present? %>
    <%= link_to realty_path(@user.managed_realty), class: "text-decoration-none text-dark" do %>
      <div class="card my-4">
        <div class="card-body d-flex align-items-center">
            <% if @user.managed_realty.logo.attached? %>
            <%= image_tag @user.managed_realty.logo, class: "rounded-circle me-4", size: "80x80" %>
          <% else %>
            <%= image_tag("no-profile.jpg", class: "rounded-circle me-4", size: "80x80") %>
          <% end %>
          <div>
            <p class="card-title small mb-1">
              <em><%= @user.first_name %> is the broker of the realty:</em>
            </h5>
            <h5 class="card-text mb-2">
              <%= @user.managed_realty.name %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>


        <!-- Listings -->
        <% if @user.realtor? %>
          <div class="mt-4">
            <h4>Active Listings</h4>
            <% if @listings.present? %>
              <%= render partial: "listings/listing", collection: @listings, as: :listing %>
              <div class="pagination">
                <%= paginate @listings, param_name: :listings_page %>
              </div>
            <% else %>
              <p class="text-muted">No listings available.</p>
            <% end %>  
          </div>
        <% elsif @user.developer? %>
          <div class="mt-4">
            <h4>Development Projects</h4>
            <% if @dev_projects.present? %>
              <%= render partial: "dev_projects/dev_project_home", collection: @dev_projects, as: :dev_project %>
              <div class="pagination">
                <%= paginate @dev_projects, param_name: :dev_projects_page %>
              </div>
            <% else %>
              <p class="text-muted">No development projects available.</p>
            <% end %>
          </div>

          <div class="mt-4 p-4 border rounded">
            <h4>Accredited Realties</h4>
            <% realties = @user.accredited_realties.joins(:accreditations).where(accreditations: { status: "approved" }).page(params[:page]).per(8) %>


            <% if realties.any? %>
              <div class="row mt-3">
                <% realties.each do |realty| %>
                  <div class="col-md-6 mb-3">
                    <div class="card h-100">
                      <div class="card-body d-flex align-items-center">
                        <% if realty.logo.attached? %>
                          <%= image_tag realty.logo, class: "rounded-circle me-3", size: "60x60" %>
                        <% else %>
                          <%= image_tag "no-logo.png", class: "rounded-circle me-3", size: "60x60" %>
                        <% end %>

                        <div class="flex-grow-1">
                          <h5 class="card-title mb-1"><%= realty.name %></h5>
                          <%= link_to "View Realty", realty_path(realty), class: "btn btn-outline-primary btn-sm" %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="mt-3">
                <%= paginate realties %>
              </div>
            <% else %>
              <p>No accredited realties yet.</p>
            <% end %>
          </div>
        <% end %>
        
      <!-- Reviews -->
      <% if @user.realtor? && @user.received_reviews.any? %>
        <div class="mt-5">      
           <%= render "reviews/user_reviews", user: @user, reviews: @reviews %>
        </div>
        <% end %>
        
    </div>

      <!-- SPACE -->
      <div class="col-12 col-md-1 mt-4">
      </div>

      <!-- RIGHT SECTION -->
      <div class="col-12 col-md-3 mt-4">
        <% if current_user&.head_broker? && @realty.present? && @developer.developer? %>
          <% if @existing_accreditation.nil? %>
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="card-title">Request Partnership</h5>
                <p class="card-text">
                  Apply for your realty to be accredited with <%= @developer.company_name %>.
                </p>
                <%= button_to "Request Accreditation",
                      realty_accreditations_path(@realty, developer_id: @developer.id),
                      method: :post,
                      class: "btn btn-outline-primary btn-sm w-100" %>
              </div>
            </div>
          <% elsif @existing_accreditation.pending? %>
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="card-title">Request Sent</h5>
                <p class="card-text text-muted">Your request is pending approval.</p>
              </div>
            </div>
          <% elsif @existing_accreditation.rejected? %>
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="card-title text-danger">Request Rejected</h5>
                <p class="card-text">This developer has rejected your request.</p>
                <%= button_to "Reapply",
                      realty_accreditations_path(@realty, developer_id: @developer.id),
                      method: :post,
                      class: "btn btn-outline-primary btn-sm w-100" %>
              </div>
            </div>
          <% elsif @existing_accreditation.approved? %>
            <!-- Do nothing -->
          <% end %>
        <% end %>


        <% rebap_membership = RebapMembership.find_by(member_id: @user.id) %>
        <% if rebap_membership.present? %>
          <% rebap_user = User.find_by(id: rebap_membership.rebap_id) %>
          <%= link_to user_path(rebap_user), class: "text-decoration-none text-dark" do %>
            <div class="card mb-2 p-1 position-relative overflow-hidden" style="border: none;">            
              <!-- Background image -->
              <div class="card-bg" 
                style="
                   position: absolute;
                           top: 0;
                           bottom: 15px;
                           left: 120px;
                           width: 70%;
                           background-image: url('<%= asset_path("authentic.png") %>');
                           background-size: cover;
                           background-position: 10% 50%;
                           opacity: 0.2;
                           z-index: 0;
                ">
              </div>
              <!-- Foreground content -->
              <div class="card-body position-relative style="z-index: 1;">
                <%= image_tag("rebap-logo.png", height: "30", class: "mb-3") %>
                <div class="small">
                  <p class="text-muted mb-0">
                    <%= @user.full_name %> is an active member of REBAP 
                    <%= rebap_membership.chapter.presence || "Unknown Chapter" %>.
                  </p>
                </div>
              </div> 
            </div>
          <% end %>
        <% end %>


        <% if @user.realtor? || @user.developer? || @user.rebap? %>
          <div class="p-4 border rounded mb-3">
            <h5 class="mb-3">Professional Details</h5>
            <div class="row">
              <div class="small text-muted">
                <table class="table table-sm">
                  <tbody>
                  <tr>
                    <td><i class="bi bi-telephone"></i>  Cellphone No.</td>
                    <td class="text-break"><%= @user.contact_no %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-envelope-at"></i>  Email</td>
                    <td class="text-break"><%= @user.email %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-geo-alt"></i>  Address</td>
                    <td class="text-break"><%= @user.address %></td>
                  </tr>
                  <tr>
                    <td><i class="bi bi-globe-americas"></i>  Website</td>
                    <td class="text-break"><%= @user.website %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        

        <% if user_signed_in? && current_user.client? && @user.realtor? %>
          <%= button_to "Message", conversations_path(realtor_id: @user.id), method: :post, class: "btn btn-success w-100" %>
        <% end %>

        <% if @user.realtor? || @user.developer? %>
        <div class="mt-4 mb-3">
          <h5 class="mb-3">Posted Guides</h5>
          <% if @user.guides.any? %>
            <% @guides.each do |guide| %>
              <%= link_to guide_path(guide.id), class: "text-decoration-none text-dark" do %>
                <div class="card mb-3">
                  <div class="card-body d-flex align-items-center">
                    <div class="small">
                      <strong><%= guide.title %></strong>
                      <p class="text-muted"><%= truncate(guide.body.to_plain_text, length: 30) %></p>
                    </div>

                    <div class="ms-auto mr-1">
                      <% if guide.guide_photo.attached? %>
                        <%= image_tag guide.guide_photo, class: "rounded", size: "80x80" %>
                      <% end %>
                    </div> 
                  </div> 
                </div>
              <% end %>
            <% end %>
            <%= paginate @guides, param_name: :guides_page %>
          </div>
        <% else %>
        This user has not published any guides.
        <% end %>
      <% end %>
      </div>



        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
