<div class="container mt-5">

  <div>
    <% if @model_house.model_photos.attached? %>
      <!-- Image Gallery Container -->
      <div class="image-gallery mt-4">
        <!-- First large image -->
        <div class="p1 mb-3 text-center">
          <%= image_tag @model_house.model_photos.first,
              class: "img-thumbnail media w-100",
              style: "max-height: 500px; object-fit: cover; cursor: pointer;",
              data: { index: 0 } %>
        </div>

        <!-- Thumbnails Row -->
        <div class="thumbnail-row d-flex align-items-center gap-2 mb-4 overflow-auto pb-2" style="white-space: nowrap;">
          <% @model_house.model_photos[1..7].each_with_index do |photo, index| %>
            <div style="flex: 0 0 auto;">
              <%= image_tag photo,
                  class: "img-thumbnail media shadow-sm",
                  style: "width: 120px; height: 120px; object-fit: cover; cursor: pointer;",
                  data: { index: index + 1 } %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Modal -->
    <div id="galleryModal" class="modal" style="display:none;">
      <span class="close" onclick="closeModal()">&times;</span>
      <img class="modal-content" id="modalImage">
      <a class="prev" onclick="changeImage(-1)">&#10094;</a>
      <a class="next" onclick="changeImage(1)">&#10095;</a>
    </div>

    <div class="row">
      <!-- LEFT SIDE OF THE SCREEN -->
      <div class="col-12 col-sm-6 col-md-8">
        <div class="d-flex ml-2">
          <h2 class="ml-2"><%= @model_house.title %></h2>
          <div class="vr mx-3 my-1" style="height: 30px;"></div>
          <div class="flex-wrap small">
            <p class="fw-light text-secondary border border-secondary px-1 mt-1 ml-2"><%= @model_house.furnish_type %></p>
          </div>
        </div>
        
        <div class="d-flex flex-wrap align-items-center ml-2">
          <h2><%= number_to_currency(@model_house.price, unit: "â‚±", precision: 2, delimiter: ",") %></h2>
          <div class="vr mx-3 my-1" style="height: 30px;"></div>
          <p class="fw-light border border-dark rounded-pill py-1 px-2 mt-1 me-2"><%= @model_house.beds %>  Beds</p>
          <p class="fw-light border border-dark rounded-pill py-1 px-2 mt-1 me-2"><%= @model_house.baths %>  Baths</p>
          <p class="fw-light border border-dark rounded-pill py-1 px-2 mt-1 me-2"><%= @model_house.sqft %>  Sq. ft.</p>
        </div>

      <div class="row mt-2 mb-3 p-2">
        <h2>About the Model House</h2>
        <p><%= @model_house.description %></p>
      </div>

      <%= render "shared/amenities", property: @model_house %>
          
        <div class="d-flex flex-wrap align-items-center mt-2 mb-2 p-1"> 
          <h6 class="fw-semibold mt-2 me-2">Available financing options:</h6>
          <% financing_options(@model_house).each_slice(3).with_index do |group, i| %>
            <% group.each do |_, label| %>
              <h6 class="fw-light text-success border border-success rounded-pill py-1 px-2 mt-1 me-2"><%= label %></h6>
            <% end %>
          <% end %>
        </div>

      </div>

      <hr class="mt-5 mb-4">
      <h3 class="mb-4">Development Project</h3>

      <% if @dev_project.present? %>
        <div class="card mb-4 p-3">
          <div class="row g-0">
            <% if @dev_project.project_photos.attached? %>
              <div class="col-md-4">
                <%= image_tag @dev_project.project_photos.first, class: "img-fluid rounded-start", resize_to_fit: [400, 300] %>
              </div>
            <% end %>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">About the Project: <%= @dev_project.title %></h5>
                <p class="card-text">
                  <i class="bi bi-geo-alt-fill"></i>
                  <%= @dev_project.barangay %>, Naga City
                </p>
                <p><%= truncate(@dev_project.description.to_plain_text, length: 150) %></p>
                <%= link_to "View Development Project", dev_project_path(@dev_project), class: "btn btn-outline-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  <% if user_signed_in? && current_user.developer? %>
    <hr class="hr p-2 mt-5" /> 
    <div class="d-flex p-1">
      <%= link_to "Edit", edit_model_house_path(@model_house), class: "btn btn-light" %> 
      <%= button_to "Delete", @model_house, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-1" %>
    </div>
  <% end %>

  </div>
</div>

