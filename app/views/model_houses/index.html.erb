<div class="container mt-5">
  <% content_for :title, "Model houses" %>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Model Houses</h2>
    <%= link_to "Create New", new_model_house_path, class: "btn btn-success" %>
  </div>

  <% @model_houses.each do |model_house| %>
    <div class="card mb-4">
      <div class="row g-0">
        <% if model_house.model_photos.attached? %>
          <div class="col-md-4">
            <%= image_tag model_house.model_photos.first, class: "img-fluid rounded-start", resize_to_fit: [400, 300] %>
          </div>
          <% else %>
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                <span class="text-muted">No photo available</span>
            </div>
         <% end %>
         <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= model_house.title %></h5>
              <p class="card-text mb-1">
                <strong><%= number_to_currency(model_house.price, unit: "â‚±", precision: 2, delimiter: ",") %></strong>
              </p>
              <div class="d-flex flex-wrap gap-2 mb-3">
                <span class="badge bg-secondary"><%= model_house.beds %> Beds</span>
                <span class="badge bg-secondary"><%= model_house.baths %> Baths</span>
                <span class="badge bg-secondary"><%= model_house.sqft %> Sq. ft.</span>
              </div>
              <div class="d-flex">
                <%= link_to "Show this model house", model_house, class: "btn btn-outline-primary btn-sm" %>
                <%= button_to "Delete", model_house_path(model_house), method: :delete, class: "btn btn-danger btn-sm ml-1", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <%= paginate @model_houses, class: "pagination" %>

</div>

