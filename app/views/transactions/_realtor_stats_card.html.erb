<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">Transaction Summary</h5>

    <div class="row text-center mt-3">
      <div class="col">
        <p class="mb-1 text-muted small">This Month</p>
        <h4><%= current_user.sales.this_month.count %></h4>
      </div>

      <div class="col">
        <p class="mb-1 text-muted small">This Year</p>
        <h4><%= current_user.sales.this_year.count %></h4>
      </div>

      <div class="col">
        <p class="mb-1 text-muted small">All Time</p>
        <h4><%= current_user.sales.completed.count %></h4>
      </div>
    </div>

    <hr>

    <div class="text-end">
      <%= link_to "View all transactions",
                  transactions_path,
                  class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>
</div>
