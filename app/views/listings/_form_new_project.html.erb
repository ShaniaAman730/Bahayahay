<%= form_with(model: @listing, local: true, html: { multipart: true }) do |form| %>
        <% if @listing.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>                
            <ul>
              <% @listing.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

    <!-- START OF FORM -->              
      <div class="field p-2">
        <%= form.label :title %><br />
        <%= form.text_field :title, required: true, class: "form-control w-100", placeholder: "Title" %>
      </div>

      <div class="form-row p-2">
         <div class="col col-md-6 mb-3">
          <%= form.label :project_type, "Property type", class: "form-label" %>
          <%= form.select :project_type, options_for_select(Listing.project_types.keys.map { |k| [k.humanize, k] }, selected: form.object.project_type || "corroborated" ), {},class: "form-select" %>
        </div>

        <div class="col col-md-6 mb-3">
          <%= form.label :furnish_type, "Furnish type", class: "form-label" %>
          <%= form.select :furnish_type, options_for_select(Listing.furnish_types.keys.map { |k| [k.humanize, k] }, selected: form.object.furnish_type || "corroborated"), {}, class: "form-select" %>
        </div>
      </div>  

      <div class="form-row p-2">
        <div class="col-12 col-md-4 mb-3">
            <%= form.label :beds, "No. of Bedrooms"  %><br>
            <%= form.number_field :beds, min: 0, step: 1, class: "form-control w-100" %>
        </div>
        <div class="col-12 col-md-4 mb-3">
          <%= form.label :baths, "No. of Toilets & Baths"  %><br>
          <%= form.number_field :baths, min: 0, step: 1, class: "form-control w-100" %>
        </div>
        <div class="col-12 col-md-4 mb-3">
          <%= form.label :sqft, "Floor area"  %><br>
          <%= form.number_field :sqft, min: 0, step: 1, class: "form-control w-100" %>
        </div>
      </div>  

      <div class="form-row p-2">
        <div class="col-12 col-md-5 mb-3">
          <%= form.label :price %>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupPrepend2">â‚±</span>
            </div>
           <%= form.number_field :price, min: 0, step: 0.01, class: "form-control" %>
        </div> 
      </div>

      <div class="col col-md-7 mb-3">
        <div class="ml-2">
        <%= form.label :pagibig_financing, "Financing options available:" %>
        <div class="d-flex">
           <%= form.check_box :pagibig_financing, class: "btn-check", id: "pagibig_financing-check", autocomplete: "off" %>
           <%= form.label :pagibig_financing, "PAGIBIG Financing", class: "btn btn-outline-success mr-1", for: "pagibig_financing-check" %>

           <%= form.check_box :bank_financing, class: "btn-check", id: "bank_financing-check", autocomplete: "off" %>
           <%= form.label :bank_financing, "Bank Financing", class: "btn btn-outline-success mr-1", for: "bank_financing-check" %>

           <%= form.check_box :inhouse_financing, class: "btn-check", id: "inhouse_financing-check", autocomplete: "off" %>
           <%= form.label :inhouse_financing, "In-house Financing", class: "btn btn-outline-success mr-1", for: "inhouse_financing-check" %>
        </div>
        </div>
      </div>
    </div>

    <div class="field p-2">
     <%= form.label :listing_photos, "Upload photos"  %><br>
     <%= form.file_field :listing_photos, multiple: true, direct_upload: true, class: "form-control w-100", id: "photos_input", accept: "image/*", data: { max_size: 2.megabytes } %>
    </div>

    <div class="field p-2">
      <%= form.label :description %><br />
      <%= form.rich_text_area :description, id: "listing_description", class: "post-textarea trix-limit", data: { max_length: 1500 } %>
      <small class="char-counter text-muted">0/1500 characters</small>
    </div>

    <div class="form-row p-2">
      <div class="col col-md-8 mb-3">
        <%= form.label :address, "Address line"  %><br>
        <%= form.text_field :address, required: true, class: "form-control w-100" %>
      </div>
      <div class="col col-md-4 mb-3">
        <%= form.label :barangay, "Barangay", class: "form-label" %>
          <%= form.select :barangay, options_for_select(Listing.barangays.keys.map { |k| [k.humanize, k] }, selected: form.object.barangay || "corroborated" ), {}, class: "form-select" %>
      </div>
    </div>

    <!-- Map Goes Here -->
    <%= form.hidden_field :latitude, id: "listing_latitude" %>
    <%= form.hidden_field :longitude, id: "listing_longitude" %>

    <div class="p-2">
      <p>Add a marker to the property's location</p>
      <div id="map" style="height:500px;"></div>
    </div>
   
  <div class="container bg-light mt-5 p-5"> 
    <h5>Amenities</h5>
    <p><small><em>Check which applies.</em></small></p>
    <div class="row">
      <% Amenity.unit.each_slice((Amenity.unit.count / 2.0).ceil) do |group| %>
        <div class="col">
          <% group.each do |amenity| %>
            <div class="form-check d-flex">
              <%= check_box_tag "listing[amenity_ids][]", amenity.id,
                  @listing.amenity_ids.include?(amenity.id),
                  id: "listing_amenity_#{amenity.id}",
                  class: "form-check-input" %>

              <%= label_tag "listing_amenity_#{amenity.id}", amenity.label, class: "form-check-label ms-2" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>  

  <div class="my-3">
    <%= form.label :developer_id, "Developer", class: "form-label fw-semibold" %>
    <%= form.collection_select :developer_id, User.developer, :id, :company_name,
          { prompt: "Select Developer" },
          { class: "form-select rounded shadow-sm" } %>
  </div>

  <div>
    <%= form.submit "Update Listing", class: "btn btn-secondary float-right mt-3 mb-5" %>
  </div>

   <% end %>

<br>
<br>
<br>

<h3>Your Attachments</h3>

  <% if @listing.listing_photos.attached? %>
    <div class="mb-3">
      <p>Previously uploaded photos:</p>
      <div class="row">
        <% @listing.listing_photos.each do |photo| %>
          <div class="col-md-3">
            <%= image_tag photo, class: "img-thumbnail media", style: "width: 300px;" %>

            <%= form_with url: remove_attachment_listing_path(@listing, attachment_id: photo.id), method: :delete, local: true do %>
              <%= submit_tag "Remove", class: "btn btn-danger btn-sm mt-2", data: { confirm: "Are you sure you want to delete this photo?" } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

